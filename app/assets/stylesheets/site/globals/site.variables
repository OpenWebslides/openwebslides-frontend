/*******************************
     User Global Variables
*******************************/

/*-------------------
       Custom
--------------------*/

@owsPink: #d60b52;
@owsPurple: #3e2153;

@ugentBlue: #1e64c8;
@ugentBlueHover: saturate(darken(@ugentBlue, 5), 10, relative);
@ugentBlueDown: darken(@ugentBlue, 10);


/*-------------------
       Colors
--------------------*/

@primaryColor: @owsPink;
@secondaryColor: @owsPurple;


/*-------------------
       Links
--------------------*/

@linkColor: @owsPink;
@linkHoverUnderline: underline;


/*-------------------
       Page
--------------------*/

@pageVerticalSpacing: 3rem;
@pageHorizontalSpacing: 1.5rem;


/*-------------------
    Sidebars menu
--------------------*/

@sidebarsMenuWidth: 3rem;
@sidebarsMenuShift: 0.5rem;
@sidebarsMenuSpacing: 2rem;
